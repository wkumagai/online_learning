# Environment Configuration
# This file contains environment variables for the trading system
# DO NOT commit this file to version control with real credentials

# Environment
ENVIRONMENT=development  # development, testing, production

# API Keys for Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEWSAPI_API_KEY=your_newsapi_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Trading API Credentials
TRADING_API_KEY=your_trading_api_key_here
TRADING_API_SECRET=your_trading_api_secret_here
TRADING_ACCOUNT_ID=your_trading_account_id_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_system
DB_USER=trading_user
DB_PASSWORD=secure_password_here

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/trading_system.log

# Email Notification Settings
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=email_password_here
NOTIFICATION_EMAIL=user@example.com

# Slack Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Trading Parameters
TRADING_MODE=paper  # paper, live
MAX_POSITION_VALUE=100000
DEFAULT_ORDER_SIZE=100
RISK_LIMIT_PERCENTAGE=5

# System Parameters
DATA_CACHE_EXPIRY=3600  # seconds
REQUEST_TIMEOUT=30  # seconds
MAX_RETRIES=3

# Trading Module Specific Settings
# 取引システム設定

# 初期資金
INITIAL_CAPITAL=1000000

# リスク設定
RISK_PER_TRADE=0.02
MAX_POSITION_SIZE=0.1

# 対象銘柄（カンマ区切り）
TARGET_SYMBOLS=NVDA,AAPL,MSFT

# 使用する戦略
ACTIVE_STRATEGY=TripleMA

# Interactive Brokers設定（実運用モード）
IB_HOST=127.0.0.1
IB_PORT=7497  # TWS: 7497, IB Gateway: 4001
IB_CLIENT_ID=1

# データソース設定
DATA_SOURCE=yahoo  # yahoo, csv, alpha_vantage

# Alpha Vantage API設定（使用する場合）
ALPHA_VANTAGE_API_KEY=your_api_key_here

# ログ設定
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# 更新間隔（秒）
UPDATE_INTERVAL=60